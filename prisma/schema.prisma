generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- NEXTAUTH REQUIRED MODELS ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom Role (Simple string for now, can be enum)
  role          String    @default("user") // "admin" or "user"

  // App Relations
  unlocks       UserUnlock[]
  usedCodes     UnlockCode[]
  logs          ActivityLog[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}

// --- APP SPECIFIC MODELS ---

model Drop {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  status    String   @default("Announced") // Announced, Live, Ended
  dropDate  DateTime
  items     Json     // Storing item metadata (Name, Rarity, ImageID) as JSON for flexibility
  
  unlockCodes UnlockCode[]
  userUnlocks UserUnlock[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UnlockCode {
  id        String   @id @default(cuid())
  code      String   @unique
  status    String   @default("active") // active, used, revoked
  
  dropId    String
  drop      Drop     @relation(fields: [dropId], references: [id])

  usedBy    String?
  user      User?    @relation(fields: [usedBy], references: [id])
  usedAt    DateTime?

  createdAt DateTime @default(now())
}

model UserUnlock {
  id        String   @id @default(cuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  dropId    String
  drop      Drop     @relation(fields: [dropId], references: [id])

  source    String   @default("code") // code, admin, purchase
  unlockedAt DateTime @default(now())

  @@unique([userId, dropId]) // Prevent double unlock of same drop
}

model ActivityLog {
  id        String   @id @default(cuid())
  action    String   // "FORGE_CODES", "REVOKE_USER", "LOGIN_FAIL"
  details   String?
  
  actorId   String?
  actor     User?    @relation(fields: [actorId], references: [id])

  ipAddress String?
  createdAt DateTime @default(now())
}
